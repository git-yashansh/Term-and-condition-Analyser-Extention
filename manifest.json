{
  "manifest_version": 3,
  "name": "TermiAI",
  "version": "3.1.2",

  "icons": {
    "16": "assest/icon16x16.png",
    "32": "assest/icon36x36.png",
    "48": "assest/icon48x48.png",
    "128": "assest/icon128x128.png"
  },

  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://termibackend.vercel.app/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assest/icon16x16.png",
      "32": "assest/icon36x36.png",
      "48": "assest/icon48x48.png",
      "128": "assest/icon128x128.png"
    }
  }

}
